<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkblue"
    >

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="0dp"
        android:layout_height="@dimen/_70sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:src="@drawable/logo"
        app:layout_constraintDimensionRatio="2:1"
        app:layout_constraintEnd_toStartOf="@id/viewSquare1"
        app:layout_constraintHorizontal_bias=".3"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewSquare1"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_30sdp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/ivLogo"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/viewSquare2"
        app:layout_constraintStart_toEndOf="@id/ivLogo"
        app:layout_constraintTop_toTopOf="@id/ivLogo"
        app:layout_constraintVertical_bias=".6" />

    <View
        android:id="@+id/viewSquare2"
        android:layout_width="34dp"
        android:layout_height="35dp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginBottom="4dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/viewSquare1"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/viewSquare3"
        app:layout_constraintStart_toEndOf="@id/viewSquare1" />

    <View
        android:id="@+id/viewSquare3"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_12sdp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/ivLogo"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/viewSquare2"
        app:layout_constraintTop_toTopOf="@id/ivLogo"
        app:layout_constraintVertical_bias="0.538" />

    <TextView
        android:id="@+id/viewRound"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="0dp"
        android:background="@drawable/background_rounded"
        android:gravity="center"
        android:text=""
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/viewSquare2"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@id/viewSquare2"
        app:layout_constraintStart_toEndOf="@id/viewSquare2"
        app:layout_constraintTop_toTopOf="@id/viewSquare2" />

    <TextView
        android:id="@+id/tvCreateGame"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_40sdp"
        android:background="@drawable/sharp_background_yellow"
        android:padding="@dimen/_8sdp"
        android:text="Create Game"
        android:textColor="@color/white"
        android:textSize="@dimen/_25sdp"
        app:layout_constraintBottom_toTopOf="@id/tvGameHistory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivLogo"
        app:layout_constraintVertical_bias=".30"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tvGameHistory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/sharp_background_blue"
        android:padding="@dimen/_8sdp"
        android:text="Game History"
        android:textColor="@color/white"
        android:textSize="@dimen/_25sdp"
        app:layout_constraintBottom_toTopOf="@id/tvGameRules"
        app:layout_constraintEnd_toEndOf="@id/tvCreateGame"
        app:layout_constraintStart_toStartOf="@id/tvCreateGame"
        app:layout_constraintTop_toBottomOf="@id/tvCreateGame" />

    <TextView
        android:id="@+id/tvGameRules"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/sharp_background_red"
        android:padding="@dimen/_8sdp"
        android:text="Game Rules"
        android:textColor="@color/white"
        android:textSize="@dimen/_25sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/tvCreateGame"
        app:layout_constraintStart_toStartOf="@id/tvCreateGame"
        app:layout_constraintTop_toBottomOf="@id/tvGameHistory" />

</android.support.constraint.ConstraintLayout>